{% extends 'base.html.twig' %}
{% block title %}
    {{ editMode ? 'Modifier la candidature' : 'Nouvelle candidature' }}
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>{{ editMode ? '✏️ Modifier la candidature' : '📥 Nouvelle candidature' }}</h1>

        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button class="btn btn-primary mt-3">
            {{ editMode ? 'Mettre à jour' : 'Enregistrer' }}
        </button>
        {{ form_end(form) }}
    </div>
{% endblock %}